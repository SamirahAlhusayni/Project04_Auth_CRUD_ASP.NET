@model CommentsModel
<h1>Add Comments Form</h1>



<form asp-action="Create" method="post" class="form-horizontal">

    <div class="form-group">
        <label asp-for="message">Comment</label>
        <div>
            <input asp-for="message" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-dark" value="Submit" style="margin-top:10px" />
    </div>

</form>