@{
    var Events = (List<EventsModel>)ViewData["Events"];
}



<div style="width: 100%; height: 30px; border-bottom: 1px dashed white; text-align: center  ; font-family: Poppins, sans-serif;
  font-size: 16px; ">
    <span style="font-size: 40px; background-color: #F3F5F6; padding: 0 10px;">
        Events<!--Padding is optional-->
    </span>
</div>


<div class="container">
    <div class="row">

        @foreach (var item in Events)
        {

            <div class="col-4" style="margin-top:10%; text-align:center">
                <div class="card mb-3 rounded pb-3">

                    <div class="card-body">

                        <img class="card-img-top" src="@item.Image" alt="Card image cap" height="200" width="80">

                        <h3 class="card-header">@item.Name</h3>
                    </div>


                    <div class="card-body">
                        <a href="/Events/Details/@item.Id" class="btn btn-outline-success">Read More</a>
                    </div>



                </div>
            </div>


        }

    </div>
</div>
